<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table table-striped mt-5" id="productTable">
            <thead>
                <tr>
                    <th scope="col">no</th>
                    <th scope="col">name</th>
                    <th scope="col">category</th>
                    <th scope="col">discription</th>
                    <th scope="col">Price</th>
                    <th scope="col">image</th>
                    <th>options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                     <td>{{this.price}}</td>
                    <td><img src="/product-images/{{this._id}}.jpg" style="width:50px;height:50px" alt=""></td>
                    <td>
                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want delete {{this.Name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(function () {
    $('#productTable').DataTable();
} );
</script>