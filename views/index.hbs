
   
   
    <section>
        <div class="container">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 mt-4">
                    <div class="card" style="width: 15rem;">
                        <img src="/product-images/{{this._id}}.jpg" style="height: 210px;"
                            class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <h6><b>Rs.{{this.price}}</b></h6>
                            <p class="card-text">
                                {{this.Description}}</p>
                            {{!-- <a href="add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                            <button  onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}



            </div>
        </div>
    </section>

    


